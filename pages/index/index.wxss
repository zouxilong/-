/* pages/index/index.wxss */

.index-header {
  width: 100%;
  height: 352rpx;
  position: absolute;
  z-index: -1;
}

.index-header2 {
  width: 100%;
  height: 183rpx;
  position: absolute;
  z-index: -1;
}

.serach {
  padding: 20rpx 0 0;
}

.swiper-tab {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  z-index: 100;
  padding: 0 0 35rpx;
}

.swiper-tab-item {
  flex: 1;
  text-align: center;
  color: #fff;
}

.active {
  color: #fff;
  position: relative;
}

.swiper-tab-item.active:after {
  content: "";
  display: block;
  height: 6rpx;
  width: 60rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 95rpx;
  border-radius: 16rpx;
}

.swiper {
  width: 100%;
  height: 100%;
  display: flex;
  position: fixed;
  top: 0rpx;
}

scroll-view {
  width: 100%;
  height: calc(100% - 0rpx); /*动态高度*/
}

.gaodu {
  height: 100rpx;
  background: rgb(196, 248, 255);
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid #4675f9;
}

.page-icon {
  margin-top: 30rpx;
}

.titlebar {
  margin-top: 40rpx;
}

.selected-layout {
  width: 650rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 auto;
}

.course {
  margin-top: 30rpx;
}

.copyright {
  margin-top: 45rpx;
}
.courseCover{
  margin-top:30rpx;
}