/* component/selected-course/selected.wxss */
@import '../../styles/iconfont.wxss';

.test {
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
}

swiper {
  height: 100%;
}

.selected-warpper {
  width: 630rpx;
  height: 300rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  margin: 0 auto;
}

.selected-header {
  width: 83%;
  height: 30rpx;
  display: flex;
  flex: 0 0 20%;
  justify-content: space-between;
  margin: 25rpx auto;
  border-bottom: 3rpx solid #eeeded;
}

.header-title {
  color: #31c9fc;
  font-size: 34rpx;
  font-family: "STZhongsong";
  margin-left: -26rpx;
}

.btn-warpper {
  width: 140rpx;
  height: 50rpx;
}

button {
  padding-right: 4rpx;
  padding-left: 6rpx;
}

.btn {
  display: flex;
  flex: 0 0 20%;
  width: 120rpx;
  height: 50rpx;
  background-color: #2bc8fc;
  color: #fff;
  font-size: 25rpx;
  border-radius: 24rpx;
  align-items: center;
  justify-content: space-around;
  margin-right: -22rpx;
}

.btn::after {
  border: 0;
}

.btn-check {
  margin-top: -2rpx;
}

.selected-main {
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
}

.main-pic {
  margin-left: -10rpx;
}

.pic {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.main-content {
  width: 60%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
}

.main-title {
  font-size: 30rpx;
  font-family: "PingFang-SC-Bold";
  font-weight: bold;
  line-height: 60rpx;
  margin-top: -15rpx;
}

.main-desc {
  font-size: 20rpx;
  font-family: "PingFang-SC-Regular";
  color: #979696;
  letter-spacing: 2rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  align-content: center;
}

.dots {
  height: 36rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

/*未选中时的小圆点样式 */

.dot {
  width: 80rpx;
  height: 8rpx;
  margin-right: 8rpx;
  background-color: #7d7d7d;
  opacity: 0.4;
  border-radius: 8rpx;
}

/*选中以后的小圆点样式  */

.active {
  width: 25rpx;
  height: 8rpx;
  opacity: 0.8;
  background-color: #7d7d7d;
  border-radius: 8rpx;
}
